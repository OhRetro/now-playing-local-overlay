{
  "manifest_version": 3,
  "name": "\"Now Playing\" Local Overlay",
  "version": "0.3.5",
  "description": "Detects music playback in the browser, sends it to a local server, and displays it in an OBS browser source.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://music.youtube.com/*",
        "https://soundcloud.com/*",
        "https://music.apple.com/*",
        "https://open.spotify.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://127.0.0.1:49210/*"
  ]
}